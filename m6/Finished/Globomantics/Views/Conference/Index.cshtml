@using Microsoft.AspNetCore.Authorization;
@model IEnumerable<Globomantics.Models.ConferenceModel>
@inject IAuthorizationService AuthorizationService

@{
    var addConferenceResult = await AuthorizationService
                .AuthorizeAsync(User, "CanAddConference");
    var isOrganizerResult = await AuthorizationService
                .AuthorizeAsync(User, "IsOrganizer");
}

<div class="row">
    <div class="col-12">
        <table class="table">
            <tr>
                <th>Name</th>
                <th>Location</th>
                <th>Start of event</th>
                <th>Attendees</th>
                <th>Actions</th>
            </tr>
            @foreach (var conference in Model)
            {
                <tr>
                    <td>@conference.Name</td>
                    <td>@conference.Location</td>
                    <td>@conference.Start.ToString("ddd d MMM")</td>
                    <td>@conference.AttendeeCount</td>
                    <td>
                        <a asp-controller="Proposal" asp-action="Index" asp-route-conferenceId="@conference.Id">Proposals</a>
                    </td>
                </tr>
            }
        </table>
   
        @if (addConferenceResult.Succeeded && isOrganizerResult.Succeeded)
        {
            <a asp-action="Add">Add</a>
        }
     
    </div>
</div>

@if (User.Identity != null && User.Identity.IsAuthenticated)
{
    <table class="table table-sm">
        @foreach (var claim in User.Claims)
        {
            <tr>
                <td>@claim.Type</td>
                <td>@claim.Value</td>
            </tr>
        }
    </table>
}

